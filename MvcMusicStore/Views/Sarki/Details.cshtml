@{
    ViewBag.Title = "Şarkı Detayları";
}

<h2>Detaylar</h2>

<div>
    <h4>Sarki</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.sarki_adi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sarki_adi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.sarki_suresi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sarki_suresi)
        </dd>

